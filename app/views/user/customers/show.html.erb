<div class="container">
  <div class="row">
    <dic class="col-sm-12 col-md-8 col-lg-5 px-5 px-5 px-sm-0 mx-auto">
      <h1 class="text-center mt-3 mb-3">ユーザー情報</h1>
      <div class="form-group">
        <%= image_tag @user.get_profile_image(300,200) %>
      </div>
      <div class="form-group">
        <class="mr-5"><%= @user.name %>
      </div>
      <div class="form-group">
        <%= @user.introduction %>
      </div>
      <div class="form-group">
        <% if !current_admin %>
          <% if @login_user.following?(@user) %>
            <%= link_to user_follow_path(id:@user.id), method: :delete do %>
              <i class="fa-regular fa-user"></i>フォロー
            <% end %>
          <% else %>
            <%= link_to user_follows_path(id:@user.id), method: :post do %>
              <i class="fa-solid fa-user-plus"></i>フォロー
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="form-group">
        ステータス
        <% if @user.is_deleted == false %>
        有効
        <% else %>
        退会
        <% end %>
      </div>
      <div class="form-group">
        <%= link_to '投稿一覧へ', user_post_items_path(all:false), class: 'btn btn-primary' %>
      </div>
    </dic>
  </div>
</div>