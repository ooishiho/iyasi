<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-3 mb-3">ユーザー編集</h1>
       <%= form_with model: @user, url: user_customer_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :profile_image, 'アイコン' %>
          <%= f.file_field :profile_image, accept: "image/*", class: 'form-control-file' %>
        </div>
        <div class="form-group">
          <%= f.label :name, 'ユーザーネーム' %>
          <%= f.text_field :name,class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :introduction,'プロフィール' %>
          <%= f.text_area :introduction,class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
          <%= f.submit '編集内容を保存' %>
        </div>
        <div class="form-group">
          <%= link_to '戻る',user_my_page_path(@user.id), class: "btn btn-primary" %>
        </div>
       <% end %>
    </div>
  </div>
</div>