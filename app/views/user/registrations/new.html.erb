<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-7 px-5 px-sm-0 mx-auto">
     <h2 class="text-center mt-3 mb-3">新規会員登録</h2>
 <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :ユーザーネーム %><br />
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new_password" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new_password" %>
  </div>

  <div class="form-group">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

  <div class="form-group">
    <p>すでに登録済の方</p>
    <%= link_to "こちら", new_user_session_path %>からログインしてください。
  </div>

    </div>
  </div>
</div>