<% if @users.exists? %>
  <% @users.each do |user| %>
    <table>
      <thead>
        <tr>
          <th>name</th>
          <th>フォロー数(<%= user.followings.count %>)</th>
          <th>フォロワー数(<%= user.followers.count %>)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.followings.user.name %></td>
          <td><%= user.followers.user.name %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>