<div class="container">
  <h1 class="mt-5 mb-3">投稿一覧(全<%= @post_items.count %>件)</h1>
   <div class="row">
    <div class="text_center mt-5">
      <%= flash[:notice] %>
    </div>
      </br class="d-none">
       <% @post_items.each do |post_item| %>
      <div class="col-md-3 mt-5">
     <% if current_user %>
       <%= link_to user_post_item_path(post_item.id)  do %>
       <%= image_tag post_item.get_item_image(200,200) %>
       <% end %>
     <% else %>
       <%= image_tag post_item.get_item_image(200,200) %>
     <% end %>
      </br>
        <%= post_item.created_at.strftime("%Y/%m/%d") %>
      </div>
      <% end %>
      </div>
   </div>
</div>
<footer>
 <div class="d-flex justify-content-center mt-5">
  <%= paginate @post_items, theme: 'twitter-bootstrap-4'%>
 </div>
</footer>