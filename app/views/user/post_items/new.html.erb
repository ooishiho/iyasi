<h1>新規投稿</h1>
<%= form_with model: PostItem.new, url: user_post_items_path, method: :post do |f| %>
<div>
  <%= f.label :post_item, '投稿画像' %>
  <%= f.file_field :image, accept: "image/*", class: 'form-control-file' %>
</div>
<div>
  <%= f.label :introduction, '投稿文' %>
  <%= f.text_field :introduction, class: 'form-control', placeholder: "任意で文章を投稿できます。" %>
</div>
<div>
  <%= f.submit '新規投稿', class: 'btn btn-success' %>
</div>
<% end %>
