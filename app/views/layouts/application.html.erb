<!DOCTYPE html>
<html>
  <head>
    <title>Iyasi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <a>iyasi</a>
    <nav>
      <ul>
       <li>
      <% if user_signed_in? %>
       <li>
        <%= link_to user_post_items_path, class:'nav-link' do %>
        <i class="fa-regular fa-image"></i>投稿一覧
        <% end %>
       </li>
       <li>
        <%= link_to user_rankings_path, class: 'nav-link' do %>
        <i class="fa-solid fa-crown"></i>ランキング
        <% end %>
       </li>
       <li>
        <%= link_to user_bookmarks_path, class: 'nav-link' do %>
        <i class="fa-solid fa-bookmark"></i>ブックマーク
        <% end %>
       </li>
       <li>
        <%= link_to user_my_page_path, class: 'nav-link' do %>
        <i class="fa-regular fa-user"></i>マイページ
        <% end %>
       </li>
       <li>
        <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
        <i class="fa-solid fa-right-from-bracket"></i>ログアウト
        <% end %>
       </li>
      <% elsif admin_signed_in? %>
       <li>
        <%= link_to admin_post_items_path, class: 'nav-link' do %>
        <i class="fa-regular fa-image"></i>投稿一覧
        <% end %>
       </li>
       <li>
        <%= link_to admin_customers_path, class: 'nav-link' do %>
        <i class="fa-solid fa-users"></i>ユーザー一覧
        <% end %>
       </li>
       <li>
        <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link' do %>
        <i class="fa-solid fa-right-from-bracket"></i>ログアウト
        <% end %>
       </li>
      <% else %>
       <li>
        <%= link_to about_path, class: 'nav-link' do %>
        About
        <% end %>
       </li>
       <li>
        <%= link_to user_post_items_path, class: 'nav-link' do %>
        <i class="fa-regular fa-image"></i>投稿一覧
        <% end %>
       </li>
       <li>
        <%= link_to new_user_registration_path, class: 'nav-link' do %>
        <i class="fa-solid fa-user-plus"></i>新規登録
        <% end %>
       </li>
       <li>
        <%= link_to new_user_session_path, class: 'nav-link' do %>
        <i class="fa-solid fa-right-to-bracket"></i>ログイン
        <% end %>
       </li>
       </li>
      </ul>
      <% end %>
    </nav>
    </header>
    <main>
     <%= yield %>
    </main>
  </body>
</html>
