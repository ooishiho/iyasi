<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1 class="text-center">投稿詳細</h1>
     <div class="form-group">
        <%= image_tag @post_item.get_item_image(700,500) %> 
     </div>
     <div class="form-group">
        <%= link_to @user.name,admin_customer_path(@user.id) %>
     </div>
     <div class="form-group">
       <%= @post_item.comment %> 
     </div>
    <div class="form-group">
      総合点数:<%= @total %>
    </div>
    <div class="form-group">
     <%= link_to '不適切な投稿',admin_post_item_path(@post_item.id), method: :delete, data: {confirm: "本当に削除しますか？"},class: "btn btn-outline-danger" %>
    </div>
    <div class="form-group">
      <%= link_to '戻る',:back, class: 'btn btn-outline-success' %>
    </div>
    </div>
  </div>
</div>